<div class="contentFull">
  <%= link_to "Edit Promotion", edit_promotion_url(@promotion), class: "right" if current_user_is_admin? %>
  <%= link_to "Delete Promotion", promotion_url(@promotion), method: :delete, confirm: "Really delete Promotion \"#{@promotion.title}\"?", class: "right" if current_user_is_admin? %>
	<h1><%= @promotion.title %></h1>
  
	<p><%= image_tag @promotion.picture.url(:large), class: "photo" %></p>
</div>
<div class="contentFull">  
	<h1><%= @promotion.highlight if @promotion.present? %></h1>
  
	<p id="body"><%= @promotion.body if @promotion.present? %></p>
</div>
<div class="contentFull">
	<h1>Promotion Timeline</h1>
  
  <div class="input left">
    <label for="start-date">Start:</label>
    <p id="start-date"><%= @promotion.start_date %></p>
  </div>
  
  <div class="input left">
    <label for="expiration-date">Expiration:</label>
    <p id="expiration-date"><%= @promotion.expiration_date %></p>
  </div>
</div>

<div class="contentFull">
  <h1 class="center"><%= link_to "Contact us to learn more!", user_url(@promotion.user, inquiry_id: @promotion.id), class: "center" %></h1>
</div>