<div class="no-imageFull owl-carousel">
  <% @active_promotions.each do |promotion| %>
    <div class="item">
      <a class="hovertext" target="_blank" title="<%= promotion.highlight %>" href="<%= promotion_url(promotion) %>">
        <%= image_tag promotion.picture.url(:large), class: "photo" %>
      </a>
    </div>
  <% end %>
</div>
<div class="content" style="height: 200px; overflow: hidden">
	<p style="float: right">
	<object class="photo" type="text/html" width="180" height="150" data="http://worldvacationsgroup.info/slideshow/index.php?sites=alaska-caribbean-europe-europevacations-exotic-luxury&amp;size=Rectangle&amp;agency=clarktravel">
		<param name="src" value="https://worldvacationsgroup.info/slideshow/index.php?sites=alaska-caribbean-europe-europevacations-exotic-luxury&amp;size=Rectangle&amp;agency=clarktravel"></object></p>
	<h1>Just In!</h1>
	<p>Be sure to check out these new offers.</p>
	<p><a href="agent.php?id=2">Learn More</a></p>
</div>
<% if current_user_is_admin? %>
  <div class="content" style="height: 200px">
  	<h1>New Promotion</h1>
  	<p>To create a new promotion, follow the link below. To manage expired
  		and current promotions, visit the table below.</p>
  	<p><%= link_to "New Promotion", new_promotion_url %></p>
  </div>
<% end %>

<ul id="promotions" class="<%= "sortable" if current_user_is_admin? %>" data-update-url="<%= sort_promotions_url %>">
  <% @active_promotions.each do |promotion| %>
    <%= content_tag_for :li, promotion, class: "content" do %>
        <%= link_to "&#10006".html_safe, promotion, method: :delete, class: "delete-button", data: {remote: true, confirm: "Really delete Promotion #{promotion.title}?"} if current_user_is_admin? %>
      	<h1><%= promotion.title %></h1>
        <div class="paragraph">
        	<p><%= promotion.highlight %></p>
        	<p><a href="<%= promotion_url(promotion) %>">Learn More</a></p>
        </div>
        <%= image_tag promotion.picture.url(:small), class: "photo right" %>
    <% end %>
  <% end %>
</ul>

<%= render "index", promotions: @promotions if current_user_is_admin? %>
