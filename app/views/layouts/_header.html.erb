    <ul class="dropdown logins">
      <% if current_user %>
    	  <%= link_to edit_user_url(current_user) do %>
          <%= "#{current_user.name} " %><span class="caret"></span>
        <% end %>
        
        <ul class="dropdown-menu hidden" aria-labelledby="">
          <li><%= link_to("Logout", session_url(), class: "logout",  method: :delete)%></li>
        </ul>
                      
      <% else %>
        <li><%= link_to "| Agent Login", new_session_url %></li>
        <li><%=  link_to "(908) 595-0400 || Directions | ", page_path("directions") %></li>
      <% end %>
    </div>
    <ul class="navigation">
